{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.ns"],
    "types": [
      "npm:@types/node"
    ]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --node-modules-dir=auto",
    "day1": "deno run --allow-read --allow-write --node-modules-dir=auto 1/day1.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "unstable": [
    "node-globals"
  ]
}
